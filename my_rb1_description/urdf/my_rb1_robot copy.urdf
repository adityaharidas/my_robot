	<!--right rear wheel-->
	<link name='right_rear_wheel'>
		<inertial>
		  <mass value="5.0"/>
		  <origin xyz="0 0 0" rpy=" 0 1.5708 1.5708"/>
		  <inertia
			  ixx="0.1" ixy="0" ixz="0"
			  iyy="0.1" iyz="0"
			  izz="0.1"
		  />
		</inertial>
	
		<collision name='collision'>
		  <origin xyz="0 0 0" rpy=" 0 1.5708 1.5708"/> 
		  <geometry>
			<cylinder radius = ".1" length = ".05"/>
		  </geometry>
		</collision>
	
		<visual name='right_rear_wheel_visual'>
		  <origin xyz="0 0 0" rpy=" 0 1.5708 1.5708"/>
		  <geometry>
			<mesh filename = "package://my_robot/meshes/wheel.dae"/>
			<!--cylinder radius = ".1" length = ".08"/-->
		  </geometry>
		</visual>
	  </link>

	  <joint type="continuous" name="right_wheel_hinge">
		<origin xyz="0.15 -0.23 0" rpy="0 0 0"/>
		<child link="right_wheel"/>
		<parent link="chassis"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<dynamics damping="0.0" friction="0.0"/>
	  </joint>

	<!-- Define the link for the front caster wheel -->
	<link name="front_caster_wheel">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<geometry>
				<sphere radius="0.025" />
			</geometry>
			<material name="black">
				<color rgba="0 0 0 1" />
			</material>
		</visual>
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<geometry>
				<sphere radius="0.025" />
			</geometry>
		</collision>
		<!-- Define the inertial properties for the front caster wheel -->
		<inertial>
			<mass value="1" />
			<origin xyz="0 0 0" />
			<inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
		</inertial>
	</link>
	<!-- Define the link for the back caster wheel -->
	<link name="back_caster_wheel">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<geometry>
				<sphere radius="0.025" />
			</geometry>
			<material name="black">
				<color rgba="0 0 0 1" />
			</material>
		</visual>
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<geometry>
				<sphere radius="0.025" />
			</geometry>
		</collision>
		<!-- Define the inertial properties for the back caster wheel -->
		<inertial>
			<mass value="1" />
			<origin xyz="0 0 0" />
			<inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
		</inertial>
	</link>
	<!-- Define the link for the front laser -->
	<link name="front_laser">
		<visual>
			<origin xyz="0 0 0" />
			<!-- 180ยบ rotation in x-axis -->
			<geometry>
				<box size="0.05 0.05 0.1" />
			</geometry>
			<material name="red">
				<color rgba="1 0 0 1" />
			</material>
		</visual>
		<collision>
			<origin xyz="0 0 0" />
			<geometry>
				<box size="0.05 0.05 0.1" />
			</geometry>
		</collision>
		<!-- Define the inertial properties for the front laser -->
		<inertial>
			<mass value="1" />
			<!-- Negligible mass for the laser -->
			<origin xyz="0 0 0" rpy="0 0 0" />
			<inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
		</inertial>
	</link>
	
	<!-- Define the joint to connect the base_footprint to the base -->
	<joint name="base_footprint_joint" type="fixed">
		<parent link="base_link" />
		<child link="base_footprint" />
		<origin xyz="0 0 -0.15" />
	</joint>


	<!-- Define the joint to connect the front caster wheel to the base -->
	<joint name="front_caster_joint" type="fixed">
		<parent link="base_link" />
		<child link="front_caster_wheel" />
		<origin xyz="-0.1 0 -0.15" />
		<!-- Align the caster wheel with its position -->
	</joint>
	<!-- Define the joint to connect the back caster wheel to the base -->
	<joint name="back_caster_joint" type="fixed">
		<parent link="base_link" />
		<child link="back_caster_wheel" />
		<origin xyz="0.1 0 -0.15" />
		<!-- Align the caster wheel with its position -->
	</joint>
	<!-- Define the joint to connect the laser to the base -->
	<joint name="front_laser_joint" type="fixed">
		<parent link="base_link" />
		<child link="front_laser" />
		<origin xyz="0.25 0.0 0.075" rpy="3.14159 0 0" />
	</joint>


    
</robot>